<h1>Edit Student Data</h1>
<hr>
<% if flash[:alert] %>
    <ul>
      <% flash[:alert]['form_errors'].each do |error| %>
          <li><%= error %></li>
      <% end %>
    </ul>
<% end %>
<%= form_for :student, url: student_path, method: 'put' do |f| %>
    <div class="field">
      <%= f.label 'Student id' %>
      <%= f.text_field :student_id %>
    </div>

    <div class="field">
      <%= f.label :department %>
      <%= f.text_field :department %>
    </div>

    <div class="field">
      <%= f.label :maths %>
      <%= f.text_field :maths %>
    </div>

    <div class="field">
      <%= f.label :physics %>
      <%= f.text_field :physics %>
    </div>

    <div class="field">
      <%= f.label :chemistry %>
      <%= f.text_field :chemistry %>
    </div>

    <div class="field">
      <%= f.label :year %>
      <%= f.text_field :year %>
    </div>

    <div class="field">
      <%= f.label :college_id %>
      <%= collection_select(:student, :college_id, College.all, :id, :name) %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<hr>.
<%= link_to 'Back', students_path %>
