<h1>Add New Student</h1>
<hr>
<% @student.errors.full_messages.each do |error| %>
    <ul>
      <li><%= error %></li>
    </ul>
<% end %>
<%= form_for :student, url: students_path do |f| %>
    <div class="field">
      <%= f.label 'Student id' %>
      <%= f.text_field :student_id %>
    </div>

    <div class="field">
      <%= f.label :department %>
      <%= f.text_field :department %>
    </div>

    <div class="field">
      <%= f.label :maths %>
      <%= f.text_field :maths %>
    </div>

    <div class="field">
      <%= f.label :physics %>
      <%= f.text_field :physics %>
    </div>

    <div class="field">
      <%= f.label :chemistry %>
      <%= f.text_field :chemistry %>
    </div>

    <div class="field">
      <%= f.label :year %>
      <%= f.text_field :year %>
    </div>

    <div class="field">
      <%= f.label :college %>
      <%= f.select :college_id, options_for_select(College.all.map{|college| [college.name, college.id]}) %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<hr>.
<%= link_to 'Back', students_path %>
